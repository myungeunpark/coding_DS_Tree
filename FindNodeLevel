// Write a Java program to print the level of a given node in a binary tree

public class FindLevel {

	public class Node{
		
		private Node left;
		private Node right;
		private int val;
		
		public Node(int val ){
			
			this.val = val;
			this.left = null;
			this.right = null;
		}
	}
	
	public void findLevel(Node root, Node node, int level) {
		
		if(root == null)
			return;
		
		int lev = level + 1;
		if(root == node) {
			
			System.out.println("level - " + lev);
			return;
		}
		
	    findLevel(root.left, node, lev);
	    findLevel(root.right, node, lev);	    		
	}
}
