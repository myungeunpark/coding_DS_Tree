// Create HashMap in Java
// https://leetcode.com/problems/design-hashmap/
// 
class Node {
    
    int key;
    int val;
    Node next;
    
    public Node(int key, int val){
        
        this.key = key;
        this.val = val;
        this.next = null;
    }
}
class MyHashMap {
    
    static int MAX_LEN = 128;
    
    Node [] hashList =  null;
    
    private int getHash(int key){   
      
        return Integer.hashCode(key) % MAX_LEN;
    }
   
    /** Initialize your data structure here. */
    public MyHashMap() {
        
        hashList = new Node[MAX_LEN];
    }
    
    /** value will always be non-negative. */
    public void put(int key, int value) {
     
            int inx = getHash(key);
            if(hashList[inx] == null){ // no data
                
                hashList[inx] = new Node(key, value);
                
            }else{
                
                Node pre = null;
                Node cur = hashList[inx];
                while(cur != null){
                    
                    if(cur.key == key){
                        cur.val = value;
                        return;
                    }
                    pre = cur;
                    cur = cur.next;
                }
                
                pre.next = new Node(key, value);
            }
    }
    
    /** Returns the value to which the specified key is mapped, or -1 if this map contains no mapping for the key */
    public int get(int key) {
        
        int inx = getHash(key);
        if(hashList[inx] == null)
            return -1;
           
        Node cur = hashList[inx];
        while(cur != null){

            if(cur.key == key){
                return cur.val;                
            }                        

            cur = cur.next;
        }
           
        return -1;
        
    }
    
    /** Removes the mapping of the specified value key if this map contains a mapping for the key */
    public void remove(int key) {
        
            int inx = getHash(key);
            if(hashList[inx] != null){ // no data
             
                Node pre = null;
                Node cur = hashList[inx];
                while(cur != null){
                    
                    if(cur.key == key){
                        if(pre == null) 
                            hashList[inx] = cur.next;
                        else
                            pre.next = cur.next;
                        
                        break;
                    }                        
                        
                    pre = cur;
                    cur = cur.next;
                }
            }                
    }
}

/**
 * Your MyHashMap object will be instantiated and called as such:
 * MyHashMap obj = new MyHashMap();
 * obj.put(key,value);
 * int param_2 = obj.get(key);
 * obj.remove(key);
 */
